{
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(python *)",
      "Bash(powershell *)",
      "Bash(uv *)",
      "Bash(npm *)",
      "Bash(npx *)",
      "Bash(node *)",
      "Bash(git *)",
      "Read",
      "Write",
      "Edit",
      "Glob",
      "Grep",
      "WebSearch",
      "WebFetch",
      "Task",
      "mcp__jarvis__*",
      "mcp__filesystem__*"
    ]
  },
  "mcpServers": {
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "C:\\",
        "D:\\",
        "E:\\",
        "F:\\"
      ]
    }
  }
}
